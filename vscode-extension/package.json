{
  "name": "api-cost-guard",
  "displayName": "API Cost Guard",
  "description": "Real-time AI API cost monitoring and optimization for developers",
  "version": "0.2.0",
  "publisher": "haluntech",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "api",
    "cost",
    "monitoring",
    "openai",
    "claude",
    "gemini",
    "budget",
    "optimization"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Haluntech/apicost.git"
  },
  "license": "MIT",
  "icon": "icon.png",
  "activationEvents": [
    "onStartup:finished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "apiCostGuard.showStatus",
        "title": "Show API Cost Status",
        "icon": "$(graph)",
        "category": "API Cost Guard"
      },
      {
        "command": "apiCostGuard.startMonitoring",
        "title": "Start Monitoring",
        "icon": "$(play)",
        "category": "API Cost Guard"
      },
      {
        "command": "apiCostGuard.stopMonitoring",
        "title": "Stop Monitoring",
        "icon": "$(stop)",
        "category": "API Cost Guard"
      },
      {
        "command": "apiCostGuard.showSettings",
        "title": "Settings",
        "icon": "$(gear)",
        "category": "API Cost Guard"
      }
    ],
    "statusBar": [
      {
        "id": "apiCostGuard.status",
        "name": "API Cost",
        "alignment": "left",
        "text": "$0.00",
        "tooltip": "API Cost Guard: Click to see details",
        "command": "apiCostGuard.showStatus"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "apiCostGuard.costExplorer",
          "name": "API Cost",
          "when": "workspaceHasPackage"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.6.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "ts-loader": "^9.5.4",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  }
}
